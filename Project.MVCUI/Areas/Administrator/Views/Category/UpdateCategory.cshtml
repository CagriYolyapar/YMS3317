
@model Category
<div class="col-lg-6">
    <section class="panel">
        <header class="panel-heading">
            Kategori Ekle
        </header>
        <div class="panel-body">
            @using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
            {
                @Html.HiddenFor(x=>x.ID)
                <div class="form-group">
                    <label>Kategori İsmi</label>
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori İsmi Giriniz" })

                </div>
                <div class="form-group">
                    <label>Açıklama Giriniz</label>
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Açıklama" })

                </div>



                <button type="submit" class="btn btn-info">Güncelle</button>
            }
        </div>
    </section>
</div>



