@model Cart
@{
    ViewBag.Title = "CartPage";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="row product-list">

    @foreach (CartItem item in Model.Sepetim)
    {
        <div class="col-md-4">
            <section class="panel">
                <div class="pro-img-box">
                    <img src="@item.ImagePath" alt="" height="300" />
                    @*<a href="@Url.Action("DeleteFromCart",new { id=item.ID})" class="adtocart">
                        <i class="icon-shopping-cart"></i>
                    </a>*@
                </div>
                <div class="panel-body text-center">
                    <h4>
                        <a href="@Url.Action("ProductDetail",new { id=item.ID})" class="pro-title">
                            @item.Name  x @item.Amount adet
                        </a>
                    </h4>
                    <p class="price">$@item.SubTotal</p>
                    <p>@Html.ActionLink("Sepetten Sil","DeleteFromCart",new { id=item.ID},new { @class="btn btn-danger"})</p>
                </div>
            </section>
        </div>
    }



</div>

<br />

